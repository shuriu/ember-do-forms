{{#do-field propertyName=propertyName
  object=object
  objectName=objectName
  update=(action update)
  showAllValidations=showAllValidations
  classNames=classNames
  data-test-input-field=_dataTestSelectorInputField
  data-test-do-field=_dataTestSelectorField
  as |field|}}

  {{#if label}}
    {{field.do-label labelText=label classNames=labelClasses data-test-do-label=_dataTestSelectorLabel}}
  {{/if}}

  {{field.do-control controlType=controlType classNames=controlClasses
    autocomplete=autocomplete
    form=form
    autofocus=autofocus
    disabled=disabled
    inputmode=inputmode
    list=list
    max=max
    maxlength=maxlength
    min=min
    minlength=minlength
    pattern=pattern
    placeholder=placeholder
    readonly=readonly
    required=required
    rows=rows
    size=size
    spellcheck=spellcheck
    step=step
    tabindex=tabindex
    title=title

    data-test-do-control=_dataTestSelectorControl
  }}

  {{field.do-feedback classNames=feedbackClasses data-test-do-feedback=_dataTestSelectorFeedback}}

  {{#if hint}}
    {{field.do-hint text=hint classNames=hintClasses data-test-do-hint=_dataTestSelectorHint}}
  {{/if}}
{{/do-field}}
