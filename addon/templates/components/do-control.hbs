{{#if hasBlock}}
  {{yield (hash
    id=id
    value=value
    validationClass=validationClass
    update=update
  )}}
{{else}}
  {{component oneWayControl
    data-test-do-control=_dataTestSelector

    id=id
    value=value
    class=validationClass
    classNames=classNames
    update=update

    options=options
    optionValuePath=optionValuePath
    optionLabelPath=optionLabelPath
    optionTargetPath=optionTargetPath
    optionComponent=optionComponent
    groupLabelPath=groupLabelPath

    includeBlank=includeBlank
    prompt=prompt
    promptIsSelectable=promptIsSelectable

    name=controlName
    autocomplete=autocomplete
    autocapitalize=autocapitalize
    autocorrect=autocorrect
    form=form
    autofocus=autofocus
    checked=checked
    disabled=disabled
    inputmode=inputmode
    list=list
    max=max
    maxlength=maxlength
    min=min
    minlength=minlength
    multiple=multiple
    pattern=pattern
    placeholder=placeholder
    readonly=readonly
    required=required
    rows=rows
    cols=cols
    wrap=wrap
    size=size
    spellcheck=spellcheck
    step=step
    tabindex=tabindex
    title=title
  }}
{{/if}}
